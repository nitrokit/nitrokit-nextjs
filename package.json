{
    "name": "nitrokit-nextjs",
    "description": "Boilerplate and Starter for Next.js 15 with App Router and Page Router support, Tailwind CSS 4 and TypeScript.",
    "version": "1.0.1",
    "type": "module",
    "repository": "github:nitrokit/nitrokit-nextjs",
    "keywords": [
        "nextjs",
        "typescript",
        "eslint",
        "prettier",
        "tailwindcss",
        "boilerplate",
        "template",
        "starter",
        "starter-kit",
        "starter-template"
    ],
    "author": {
        "name": "Mustafa Gen√ß",
        "email": "eposta@mustafagenc.info",
        "url": "https://mustafagenc.info"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/nitrokit/nitrokit-nextjs/issues"
    },
    "homepage": "https://nitrokit.tr",
    "private": false,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "start": "next start",
        "type-check": "tsc --noEmit",
        "lint": "eslint --no-cache .",
        "lint:fix": "eslint --fix .",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --cache",
        "format:write": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --cache",
        "prepare": "husky",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:report": "playwright show-report",
        "doppler:upload": "doppler secrets upload .env",
        "env:sanitize": ".husky/post-commit"
    },
    "dependencies": {
        "@t3-oss/env-nextjs": "^0.13.8",
        "clsx": "^2.1.1",
        "next": "15.5.3",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "tailwind-merge": "^3.3.1",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@codecov/vite-plugin": "^1.9.1",
        "@eslint/eslintrc": "^3",
        "@playwright/test": "^1.54.1",
        "@tailwindcss/postcss": "^4.1.11",
        "@tailwindcss/typography": "^0.5.16",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9",
        "eslint-config-next": "15.5.3",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.2",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "playwright": "^1.54.1",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4",
        "ts-node": "^10.9.2",
        "tw-animate-css": "^1.3.5",
        "typescript": "^5",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    }
}
